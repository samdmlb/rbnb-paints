<div class="card rounded p-4 bg-white">
  <%= simple_form_for [@paint, @booking] do |f| %>

    <%# Prix par jour %>
    <div class="d-flex justify-content-center">
      <h5><%= @paint.price %>€ par jour</h5>
    </div>

    <%# Formulaire des dates %>
    <%= f.input :start_date, as: :date %>
    <%= f.input :end_date, as: :date %>

    <%# Bouton réserver %>
    <div class="d-flex justify-content-center">
      <%= f.button :submit, 'Réserver', class: 'btn btn-primary w-100' %>
    </div>

    <%# Calcul du prix par jours grace a javascript %>
    <div class="d-flex justify-content-between mt-3">
      <%= javascript_tag do %>const paintPrice = <%= @paint.price.to_json %>;<% end %>
      <p class=""><%= @paint.price %>€ * <span id="number-of-days">1</span> jours</p>
      <p><span id="price-result"><%= @paint.price %></span>€</p>
    </div>

    <%# Frais d'envoi %>
    <div class="d-flex justify-content-between">
      <p class="">Frais d'envoi</p>
      <p>200€</p>
    </div>

    <hr>

    <%# Prix total %>
    <div class="d-flex justify-content-between">
      <p>Total</p>
      <p><span id="price-total"><%= @paint.price + 200 %></span>€</p>
    </div>

  <% end %>
</div>
