<div class="col-12 border-bottom">
  <div class="col-11 mx-auto d-flex justify-content-between my-3">
    <%# Logo / Brand %>
    <div class="col-3 d-flex my-auto">
        <%= link_to "/", class: "navbar-brand" do %>
          <div class="d-flex justify-content-start align-items-center">
            <%= image_tag(asset_path("Logo3d.png"), alt: "Logo", width: 50) %>
            <h3 class="my-0 mx-2">Art Land</h3>
          </div>
        <% end %>
    </div>

    <%# Boutons %>
    <div class="col-6 d-flex justify-content-center my-auto">
      <%= button_to "Tableaux", paints_path, :class => "btn trois-button rounded-pill px-4#{' active' if current_page?(paints_path)}", :method => :get %>
      <%= button_to "Mes tableaux", my_paints_paints_path, :class => "btn trois-button rounded-pill px-4 mx-3#{' active' if current_page?(my_paints_paints_path)}", :method => :get %>
      <%= button_to "Mes réservations", bookings_path, :class => "btn trois-button rounded-pill px-4#{' active' if current_page?(bookings_path)}", :method => :get %>
    </div>

    <%# Lien paint/new et menu %>
    <div data-controller="toggle" class="col-3 d-flex justify-content-end">
      <%# lien vers new paint %>
      <div class="my-auto mx-3">
        <%= link_to "Proposer une peinture", new_paint_path, class: 'text-decoration-none text-dark' %>
      </div>
      <%# bouton menu %>
      <div data-action="click->toggle#fire" class="button-menu">
        <i class="fa-solid fa-bars" style="margin: 0 auto;"></i>
        <% if user_signed_in? %> <%# a ajouter avatar user %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
        <% else %>
          <i class="fa-solid fa-user"></i>
        <% end %>
      </div>
      <%# menu %>
      <div  data-toggle-target="togglableElement" class="d-none menu-align-right">
        <ul>
          <% if user_signed_in? %>
            <li>
              <%= link_to "Mes tableaux", my_paints_paints_path %>
            </li>
            <li>
              <%= link_to "Mes réservations", bookings_path %>
            </li>
            <hr>
            <li>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete} %>
            </li>

          <% else %>
            <li>
              <%= link_to "Connexion", new_user_session_path %>
            </li>
            <li>
              <%= link_to "Inscription",  new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
