<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card">
        <div class="card-img-top w-100 p-100">
          <%= cl_image_tag @paint.photo.key, crop: :fill %>
        </div>
      </div>
    </div>
      <div class="col-3 d-block">
        <div class="card w-100 h-50">
          <div class="img-top ">
          <%# autre photo ici %>
          </div>

        </div>
            <div class="card w-100 h-50">
          <div class="img-top ">
          <%# autre photo ici %>
          </div>
        </div>

      </div>
      <div class="col-3 d-block">
        <div class="card w-100 h-50">
          <div class="img-top ">
          <%# autre photo ici %>
          </div>

        </div>
            <div class="card w-100 h-50">
          <div class="img-top ">
          <%# autre photo ici %>
          </div>
        </div>
      </div>

    <div class="col-8 mt-5">
      <div class="d-block mb-4">
        <h1 class="mb-0"> <%= @paint.name %></h1>
        <h3><%= @paint.artist %></h3>

        <div class="w-50 rounded d-flex mt-4">
          <div class="d-flex avatar-large" style="font-size: 28px;">
            <% if @paint.user.photo.key %>
              <%= cl_image_tag @paint.user.photo.key, class: 'avatar-large', crop: :thumb, gravity: :face %>
            <% else %>
              <i class="fa-solid fa-user m-auto"></i>
            <% end %>
          </div>
          <div class="mx-2">
            <h5 class="m-0"> <%= @paint.user[:first_name] + " " + @paint.user[:last_name] %> </h5>
            <h6 class="m-0">Galeriste depuis le <%= @paint.user[:created_at].strftime("%d/%m/%Y") %></h6>
          </div>
        </div>

        <hr>

        <div class="d-block mt-4">
          <div class="d-block mb-4">
            <h4>Mouvement</h4>
            <h6><%= @paint.movement %></h6>
          </div>
          <div class="d-block mb-4">
            <h4>Ann√©e</h4>
            <h6><%= @paint.year %></h6>
          </div>
          <div class="d-block mb-4">
            <h4>Technique</h4>
            <h6><%= @paint.technique %></h6>
          </div>

          <%# le current_user peut destroy la paint si elle lui appartient %>
          <div>
            <% if @paint.user == current_user %>
              <%= link_to "Supprimer", paint_path(@paint),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4 mt-5">
      <div class="d-block">
        <%= render 'bookings/booking_form' %>
      </div>
    </div>

  </div>
</div>
